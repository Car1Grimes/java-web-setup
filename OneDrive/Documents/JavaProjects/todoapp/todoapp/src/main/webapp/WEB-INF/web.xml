<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<display-name>HelloServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.HelloServlet</servlet-class>
  </servlet>
  
  <servlet>
  	<servlet-name>TaskServlet</servlet-name>
  	<display-name>TaskServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.TaskServlet</servlet-class>
  </servlet>
  
  
  <servlet>
  	<servlet-name>LoginServlet</servlet-name>
  	<display-name>LoginServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateTaskServlet</servlet-name>
  	<display-name>CreateTaskServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.CreateTaskServlet</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>
  
  
  
  <servlet-mapping>
  	<servlet-name>TaskServlet</servlet-name>
  	<url-pattern>/tasks</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
  	<servlet-name>LoginServlet</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateTaskServlet</servlet-name>
  	<url-pattern>/createTasks</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
        <welcome-file>login/login.jsp</welcome-file>
   </welcome-file-list>
</web-app>
