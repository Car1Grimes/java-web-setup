<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
  	<servlet-name>HelloServlet</servlet-name>
  	<display-name>HelloServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.HelloServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateTaskServlet</servlet-name>
  	<display-name>CreateTaskServlet</display-name>
  	<description></description>
  	<servlet-class>com.todo.controller.CreateTaskServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>HelloServlet</servlet-name>
  	<url-pattern>/HelloServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateTaskServlet</servlet-name>
  	<url-pattern>/CreateTaskServlet</url-pattern>
  </servlet-mapping>
</web-app>
